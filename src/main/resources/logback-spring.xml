<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 콘솔 출력 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 간결한 패턴 -->
            <pattern>%d{HH:mm:ss} %-5level %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 중요한 로그만 출력 -->
    <logger name="zerobase.MyShoppingMall.controller" level="INFO"/>
    <logger name="zerobase.MyShoppingMall.service" level="INFO"/>
    <logger name="zerobase.MyShoppingMall.temps" level="INFO"/>

    <!-- 불필요한 로그 제거 -->
    <logger name="org.springframework.web.servlet.DispatcherServlet" level="WARN"/>
    <logger name="org.springframework.web.client.RestTemplate" level="WARN"/>
    <logger name="org.apache.http" level="WARN"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="zerobase.MyShoppingMall.oAuth2.JwtAuthenticationFilter" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>